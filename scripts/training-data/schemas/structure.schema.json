{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "structure.schema.json",
  "title": "Structure (06a)",
  "description": "Output schema for 06a.structure - interaction boundaries and phases",
  "type": "object",
  "required": ["video_id", "source_file", "processed_at", "interactions", "summary", "metadata"],
  "properties": {
    "video_id": {
      "type": "string",
      "description": "Unique video identifier"
    },
    "source_file": {
      "type": "string",
      "description": "Path to input file from 05.conversations"
    },
    "processed_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp of processing"
    },
    "interactions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["interaction_id", "conversation_id", "segment_ids", "turns", "phases"],
        "properties": {
          "interaction_id": {
            "type": "integer",
            "description": "Unique interaction index within video"
          },
          "conversation_id": {
            "type": "integer",
            "description": "Conversation group ID from 05"
          },
          "segment_ids": {
            "type": "array",
            "items": { "type": "integer" },
            "description": "Segment IDs that comprise this interaction"
          },
          "turns": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["index", "speaker", "text"],
              "properties": {
                "index": { "type": "integer" },
                "speaker": {
                  "type": "string",
                  "enum": ["coach", "target", "voiceover", "other"]
                },
                "text": { "type": "string" }
              }
            }
          },
          "phases": {
            "type": "object",
            "description": "Phase boundaries within the interaction (street daygame model)",
            "properties": {
              "open": {
                "type": "object",
                "description": "Initial approach and first contact",
                "properties": {
                  "start_turn": { "type": "integer" },
                  "end_turn": { "type": "integer" },
                  "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
                }
              },
              "pre_hook": {
                "type": "object",
                "description": "Coach working to engage her - assumptions, teasing, she responds briefly",
                "properties": {
                  "start_turn": { "type": "integer" },
                  "end_turn": { "type": "integer" },
                  "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
                }
              },
              "post_hook": {
                "type": "object",
                "description": "She's invested - mutual exchange, she asks questions, shares voluntarily",
                "properties": {
                  "start_turn": { "type": "integer" },
                  "end_turn": { "type": "integer" },
                  "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
                }
              },
              "close": {
                "type": "object",
                "description": "Asking for contact or date",
                "properties": {
                  "start_turn": { "type": "integer" },
                  "end_turn": { "type": "integer" },
                  "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
                }
              }
            }
          },
          "hook_point": {
            "type": "object",
            "description": "The moment she becomes invested (transition from pre_hook to post_hook)",
            "properties": {
              "turn_index": { "type": "integer" },
              "signal": { "type": "string", "description": "What indicated the hook (e.g., 'she asked a question', 'she shared personal info')" },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total_interactions", "total_turns"],
      "properties": {
        "total_interactions": { "type": "integer" },
        "total_turns": { "type": "integer" }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["pipeline_version", "prompt_version", "model_version", "schema_version"],
      "properties": {
        "pipeline_version": { "type": "string" },
        "prompt_version": { "type": "string" },
        "model_version": { "type": "string" },
        "schema_version": { "type": "string" },
        "input_checksum": { "type": "string" }
      }
    }
  }
}
