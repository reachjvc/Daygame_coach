{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "content.schema.json",
  "title": "Content (06b)",
  "description": "Output schema for 06b.content - techniques and topics",
  "type": "object",
  "required": ["video_id", "source_file", "processed_at", "taxonomy_version", "interactions", "summary", "metadata"],
  "properties": {
    "video_id": {
      "type": "string",
      "description": "Unique video identifier"
    },
    "source_file": {
      "type": "string",
      "description": "Path to input file from 06a.structure"
    },
    "processed_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp of processing"
    },
    "taxonomy_version": {
      "type": "string",
      "description": "Version of taxonomy used (e.g., 'v1')"
    },
    "interactions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["interaction_id", "conversation_id", "techniques_used", "topics_discussed"],
        "properties": {
          "interaction_id": {
            "type": "integer",
            "description": "Must match interaction_id from 06a"
          },
          "conversation_id": {
            "type": "integer",
            "description": "Must match conversation_id from 06a"
          },
          "techniques_used": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["technique", "turn_index", "confidence"],
              "properties": {
                "technique": {
                  "type": "string",
                  "description": "Must be from taxonomy"
                },
                "turn_index": {
                  "type": "integer",
                  "description": "Which turn this technique appears in"
                },
                "evidence": {
                  "type": "string",
                  "description": "Quote or reason for classification"
                },
                "confidence": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          },
          "topics_discussed": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["topic", "turn_index", "confidence"],
              "properties": {
                "topic": {
                  "type": "string",
                  "description": "Must be from taxonomy"
                },
                "turn_index": {
                  "type": "integer",
                  "description": "Which turn this topic appears in"
                },
                "evidence": {
                  "type": "string",
                  "description": "Quote or phrase that indicates this topic"
                },
                "confidence": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total_interactions", "unique_techniques", "unique_topics"],
      "properties": {
        "total_interactions": { "type": "integer" },
        "unique_techniques": { "type": "integer" },
        "unique_topics": { "type": "integer" },
        "technique_counts": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        },
        "topic_counts": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["pipeline_version", "prompt_version", "model_version", "schema_version", "taxonomy_version"],
      "properties": {
        "pipeline_version": { "type": "string" },
        "prompt_version": { "type": "string" },
        "model_version": { "type": "string" },
        "schema_version": { "type": "string" },
        "taxonomy_version": { "type": "string" },
        "input_checksum": { "type": "string" }
      }
    }
  }
}
