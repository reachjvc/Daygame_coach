{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://daygame-coach/schemas/confidence_trace.schema.json",
  "title": "Pipeline Confidence Trace",
  "type": "object",
  "required": [
    "version",
    "generated_at",
    "scope",
    "segments"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "generated_at": {
      "type": "string"
    },
    "pipeline_version": {
      "type": "string"
    },
    "scope": {
      "type": "object",
      "required": [
        "manifest",
        "video_id"
      ],
      "properties": {
        "manifest": {
          "type": "string"
        },
        "video_id": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_-]{11}$"
        },
        "source": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "segments": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/segment_trace"
      }
    },
    "conversations": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/conversation_trace"
      }
    },
    "video_summary": {
      "$ref": "#/$defs/video_summary"
    }
  },
  "$defs": {
    "confidence_band": {
      "type": "string",
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "scope_type": {
      "type": "string",
      "enum": [
        "segment",
        "conversation",
        "video",
        "batch"
      ]
    },
    "penalty_trace": {
      "type": "object",
      "required": [
        "issue_code",
        "scope_type",
        "severity",
        "multiplier",
        "before",
        "after",
        "delta"
      ],
      "properties": {
        "issue_code": {
          "type": "string"
        },
        "scope_type": {
          "$ref": "#/$defs/scope_type"
        },
        "severity": {
          "type": "string",
          "enum": [
            "critical",
            "major",
            "minor",
            "info"
          ]
        },
        "multiplier": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "before": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "after": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "delta": {
          "type": "number",
          "minimum": -1.0,
          "maximum": 1.0
        }
      },
      "additionalProperties": false
    },
    "segment_trace": {
      "type": "object",
      "required": [
        "segment_id",
        "base_confidence",
        "final_confidence",
        "confidence_band",
        "penalties"
      ],
      "properties": {
        "segment_id": {
          "type": "integer",
          "minimum": 0
        },
        "conversation_id": {
          "type": "integer",
          "minimum": 0
        },
        "token_weight": {
          "type": "number",
          "minimum": 0.0
        },
        "base_confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "final_confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "confidence_band": {
          "$ref": "#/$defs/confidence_band"
        },
        "penalties": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/penalty_trace"
          }
        }
      },
      "additionalProperties": false
    },
    "conversation_trace": {
      "type": "object",
      "required": [
        "conversation_id",
        "final_confidence",
        "confidence_band"
      ],
      "properties": {
        "conversation_id": {
          "type": "integer",
          "minimum": 1
        },
        "segment_count": {
          "type": "integer",
          "minimum": 0
        },
        "impacted_segment_ratio": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "final_confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "confidence_band": {
          "$ref": "#/$defs/confidence_band"
        },
        "gate_decision": {
          "type": "string",
          "enum": [
            "pass",
            "review",
            "block"
          ]
        }
      },
      "additionalProperties": false
    },
    "video_summary": {
      "type": "object",
      "required": [
        "final_confidence",
        "confidence_band",
        "segment_count"
      ],
      "properties": {
        "segment_count": {
          "type": "integer",
          "minimum": 0
        },
        "conversation_count": {
          "type": "integer",
          "minimum": 0
        },
        "final_confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "confidence_band": {
          "$ref": "#/$defs/confidence_band"
        },
        "gate_decision": {
          "type": "string",
          "enum": [
            "pass",
            "review",
            "block"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
